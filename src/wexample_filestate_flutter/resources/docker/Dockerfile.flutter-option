# Base image with Flutter SDK (includes Dart)
FROM ghcr.io/cirruslabs/flutter:stable

# Set permissions on Flutter SDK for existing UID 1000
RUN chown -R 1000:1000 /sdks/flutter

# Copy analysis options configuration
COPY analysis_options.yaml /home/appuser/analysis_options.yaml

# Set working directory
WORKDIR /var/www/html

# Keep container running
CMD ["tail", "-f", "/dev/null"]
